<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        style="@style/viewBg"
        android:background="#9ED8EC"
        app:layout_constraintBottom_toTopOf="@id/centerLine"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        style="@style/viewBg"
        android:background="#00A2EA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centerLine"
        tools:ignore="MissingConstraints" />


    <androidx.cardview.widget.CardView
        android:id="@+id/imgAvatarContainer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="75dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:background="#FFF"
            android:id="@+id/profile_img"
            android:src="@drawable/ic_person"
            app:civ_border_width="4dp"
            app:civ_border_color="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_text"
        android:textSize="20sp"
        android:text="имя профиля"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/imgAvatarContainer"
        app:layout_constraintTop_toTopOf="@id/imgAvatarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatarContainer"
        android:textAllCaps="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressPerson"
        app:layout_constraintTop_toBottomOf="@id/imgAvatarContainer"
        app:layout_constraintBottom_toTopOf="@id/lvlText"
        style="@style/progressBar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="5"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/progressPerson"
        android:textColor="#000"
        android:text="0/100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/centerLine"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="4dp"/>

    <TextView
        android:id="@+id/lvlText"
        android:background="@drawable/text_background_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Уровень: beginner"
        android:layout_width="200dp"
        android:layout_height="40dp"/>

    <ImageView
        android:src="@drawable/gold_medals"
        android:id="@+id/goldMedals"
        app:layout_constraintStart_toStartOf="@id/lvlText"
        app:layout_constraintTop_toBottomOf="@id/lvlText"
        style="@style/medalsImage" />

    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/goldMedals"
        app:layout_constraintStart_toStartOf="@id/goldMedals"
        app:layout_constraintEnd_toEndOf="@id/goldMedals"
        style="@style/medalsText"
        android:text="5" />

    <ImageView
        android:id="@+id/silverMedals"
        android:src="@drawable/silver_medals"
        style="@style/medalsImage"
        app:layout_constraintStart_toEndOf="@id/goldMedals"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/lvlText" />

    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/silverMedals"
        app:layout_constraintStart_toStartOf="@id/silverMedals"
        app:layout_constraintEnd_toEndOf="@id/silverMedals"
        style="@style/medalsText"
        android:text="15" />

    <ImageView
        android:src="@drawable/bronze_medals"
        android:id="@+id/bronzeMedals"
        app:layout_constraintStart_toEndOf="@id/silverMedals"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/lvlText"
        style="@style/medalsImage"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/bronzeMedals"
        app:layout_constraintStart_toStartOf="@id/bronzeMedals"
        app:layout_constraintEnd_toEndOf="@id/bronzeMedals"
        android:text="8"
        style="@style/medalsText" />

    <View
        app:layout_constraintBottom_toTopOf="@id/textStartCourses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/backgroud_text_view"
        android:layout_width="250dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/textStartCourses"
        android:text="НАЧАТЬ КУРС"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#000"
        android:background="@drawable/bottom_white_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_width="200dp"
        android:layout_height="70dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>